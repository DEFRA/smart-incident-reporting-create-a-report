{
  "name": "create-a-report",
  "version": "0.2.0",
  "description": "Digital service for incident reporting by internal ICS team",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "node index.js",
    "build:css": "./bin/build-css.sh",
    "build:js": "./bin/build-js.sh",
    "build": "./bin/build.sh",
    "copy:static": "bin/copy-static.sh",
    "debug": "nodemon --inspect index.js",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "watch:nodejs": "nodemon --delay 1000ms --signal SIGTERM -r dotenv/config index.js",
    "dev": "concurrently 'npm:watch:css' 'npm:watch:nodejs'",
    "lint": "standard",
    "unit-test": "jest --runInBand --verbose",
    "test": "npm run lint && npm run unit-test",
    "prettier": "prettier-config-standard",
    "start-backend": "docker-compose -f docker/backend-services.yml up -d",
    "stop-backend": "docker-compose -f docker/backend-services.yml down"
  },
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/smart-incident-reporting-create-a-report/issues"
  },
  "homepage": "https://github.com/DEFRA/smart-incident-reporting-create-a-report#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/smart-incident-reporting-create-a-report.git"
  },
  "dependencies": {
    "@azure/identity": "^4.5.0",
    "@azure/service-bus": "^7.9.5",
    "@defra/smart-incident-reporting": "git://github.com/DEFRA/smart-incident-reporting.git#feature/SIR-1538-upgrade-node",
    "@hapi/bell": "^13.0.2",
    "@hapi/boom": "^10.0.1",
    "@hapi/catbox-redis": "^7.0.2",
    "@hapi/cookie": "^12.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/iron": "github:DEFRA/iron",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.1.0",
    "@hapi/yar": "^11.0.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "blipp": "^4.0.2",
    "govuk-frontend": "^5.7.1",
    "hapi-pino": "^12.1.0",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "nunjucks": "^3.2.4",
    "sass": "^1.89.1",
    "style-loader": "^4.0.0",
    "css-loader": "^7.1.2",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@hapi/catbox-memory": "^6.0.2",
    "concurrently": "^9.1.2",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "node-html-parser": "^6.1.13",
    "nodemon": "^3.1.10",
    "standard": "^17.1.2"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "it",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ],
    "ignore": [
      "**/public/js/"
    ]
  },
  "nodemonConfig": {
    "ext": "html,css,js,cjs,mjs,json,pug,njk",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 3000
  }
}
