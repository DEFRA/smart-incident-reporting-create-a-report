{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SIR Reporting An Environmental Problem",
  "type": "object",
  "properties": {
    "reportingAnEnvironmentalProblem": {
      "type": "object",
      "properties": {
        "sessionGuid": {
          "type": "string",
          "format": "uuid"
        },
        "reportType": {
          "type": "integer",
          "enum": [
            100,
            200,
            300,
            400,
            500,
            600,
            700,
            800,
            900,
            1000,
            1100,
            1200,
            1300,
            1400,
            1500,
            1600,
            1700,
            1800,
            1900,
            2000,
            2100,
            2200,
            2300,
            2400,
            2500,
            2600,
            2700,
            2800,
            2900,
            3000,
            3100,
            3200,
            3300
          ],
          "meta:enum": {
            "100": "Water pollution",
            "200": "Odour",
            "300": "Blockage in a watercourse",
            "400": "Abstraction/low levels",
            "500": "Alteration to a water course",
            "600": "Beach pollution",
            "700": "Burning of waste",
            "800": "Damage to nature",
            "900": "Dust",
            "1000": "Fire",
            "1100": "Fish disease",
            "1200": "Fish kill",
            "1300": "Flies",
            "1400": "Flooding - external report",
            "1500": "Flooding - internal report",
            "1600": "Flytipping",
            "1700": "Healthy concern",
            "1800": "Illegal fishing",
            "1900": "Illegal waste site",
            "2000": "Invasive species",
            "2100": "Land contamination",
            "2200": "Litter",
            "2300": "Mud",
            "2400": "Navigation incident",
            "2500": "Noise",
            "2600": "Oil and chemical spills",
            "2700": "Radioactive and nuclear",
            "2800": "Reservoir incident",
            "2900": "Road traffic collision",
            "3000": "Suspected permit breach",
            "3100": "Vermin",
            "3200": "Waste carrier",
            "3300": "Other"
          }
        },
        "datetimeReported": {
          "type": "string",
          "format": "date-time"
        },
        "datetimeObserved": {
          "type": "string",
          "format": "date-time"
        },
        "reporterName": {
          "type": "string"
        },
        "reporterPhoneNumber": {
          "type": "string"
        },
        "reporterEmailAddress": {
          "type": "string"
        },
        "questionSetId": {
          "type": "number"
        },
        "incidentCategory": {
          "type": "number"
        },
        "reasonForCategorisation": {
          "type": "string"
        },
        "otherDetails": {
          "type": "string"
        },
        "loggedByDisplayName": {
          "type": "string"
        },
        "loggedByUserPrincipalName": {
          "type": "string"
        },
        "data": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "properties": {
              "questionId": {
                "type": "number"
              },
              "questionAsked": {
                "type": "string"
              },
              "answerId": {
                "type": "number"
              },
              "questionResponse": {
                "type": "boolean"
              },
              "otherDetails": {
              "type": "string"
              }
            },
            "required": [
              "questionId",
              "questionAsked",
              "answerId",
              "questionResponse"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "sessionGuid",
        "reportType",
        "datetimeReported",
        "datetimeObserved",
        "questionSetId",
        "data"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "reportingAnEnvironmentalProblem"
  ]
}